{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "ignoreDeprecations": "5.0",
    "importsNotUsedAsValues": "error",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "preserveValueImports": false,
    "verbatimModuleSyntax": false,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts"],
  "references": [{ "path": "../infra-sight-api" }, { "path": "../infra-sight-sdk" }, { "path": "../infra-sight-telemetry" }]
}
